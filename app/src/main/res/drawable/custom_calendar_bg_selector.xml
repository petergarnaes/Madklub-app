<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <item android:state_selected="true" android:drawable="@drawable/calendar_selected_date"/>
    <item android:state_pressed="true" android:drawable="@drawable/calendar_selected_date"/>
    <item app:state_current_month="false">
        <shape android:shape="rectangle">
            <solid android:color="@color/calendar_current_month"/>
        </shape>
    </item>
    <item app:state_today="true" android:drawable="@drawable/bg_circle_today"/>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/calendar_background"/>
        </shape>
    </item>
</selector>